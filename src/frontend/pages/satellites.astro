---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Mission Planner - Satellites" activePage="satellites">
  <div class="space-y-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <h1 class="text-3xl font-bold text-astro-dark mb-4">Satellite Management</h1>
      <p class="text-astro-gray mb-6">
        Monitor and manage all satellites in your mission fleet.
      </p>

      <!-- Add New Satellite Section -->
      <div class="mb-8 p-6 bg-astro-light/10 border border-astro-light/20 rounded-lg">
        <div class="mb-4">
          <label for="satellite-name" class="block text-sm font-medium text-astro-dark mb-2">
            Satellite Name
          </label>
          <input
            type="text"
            id="satellite-name"
            placeholder="Enter satellite name..."
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-astro-light focus:border-transparent"
          />
        </div>
        <button class="bg-astro-blue hover:bg-astro-light hover:text-astro-dark px-6 py-2 rounded-lg text-white font-medium transition-colors duration-200">
          Add New Satellite
        </button>
      </div>

      <!-- Satellite Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Satellite 1 -->
        <div class="p-6 bg-gray-50 rounded-lg border border-gray-200">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-astro-dark">Alpha-1</h3>
            <span class="w-3 h-3 bg-green-500 rounded-full"></span>
          </div>
          <div class="space-y-2 text-sm text-astro-gray">
            <p><span class="font-medium">Status:</span> Online</p>
            <p><span class="font-medium">Orbit:</span> 400km altitude</p>
            <p><span class="font-medium">Signal:</span> Strong</p>
            <p><span class="font-medium">Battery:</span> 92%</p>
          </div>
        </div>

        <!-- Satellite 2 -->
        <div class="p-6 bg-gray-50 rounded-lg border border-gray-200">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-astro-dark">Beta-2</h3>
            <span class="w-3 h-3 bg-green-500 rounded-full"></span>
          </div>
          <div class="space-y-2 text-sm text-astro-gray">
            <p><span class="font-medium">Status:</span> Online</p>
            <p><span class="font-medium">Orbit:</span> 450km altitude</p>
            <p><span class="font-medium">Signal:</span> Strong</p>
            <p><span class="font-medium">Battery:</span> 88%</p>
          </div>
        </div>

        <!-- Satellite 3 -->
        <div class="p-6 bg-gray-50 rounded-lg border border-gray-200">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-astro-dark">Gamma-3</h3>
            <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
          </div>
          <div class="space-y-2 text-sm text-astro-gray">
            <p><span class="font-medium">Status:</span> Maintenance</p>
            <p><span class="font-medium">Orbit:</span> 380km altitude</p>
            <p><span class="font-medium">Signal:</span> Weak</p>
            <p><span class="font-medium">Battery:</span> 65%</p>
          </div>
        </div>

        <!-- Satellite 4 -->
        <div class="p-6 bg-gray-50 rounded-lg border border-gray-200">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-astro-dark">Delta-4</h3>
            <span class="w-3 h-3 bg-red-500 rounded-full"></span>
          </div>
          <div class="space-y-2 text-sm text-astro-gray">
            <p><span class="font-medium">Status:</span> Offline</p>
            <p><span class="font-medium">Orbit:</span> 420km altitude</p>
            <p><span class="font-medium">Signal:</span> None</p>
            <p><span class="font-medium">Battery:</span> 12%</p>
          </div>
        </div>

        <!-- Satellite 5 -->
        <div class="p-6 bg-gray-50 rounded-lg border border-gray-200">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-astro-dark">Echo-5</h3>
            <span class="w-3 h-3 bg-green-500 rounded-full"></span>
          </div>
          <div class="space-y-2 text-sm text-astro-gray">
            <p><span class="font-medium">Status:</span> Online</p>
            <p><span class="font-medium">Orbit:</span> 500km altitude</p>
            <p><span class="font-medium">Signal:</span> Strong</p>
            <p><span class="font-medium">Battery:</span> 95%</p>
          </div>
        </div>

        <!-- Satellite 6 -->
        <div class="p-6 bg-gray-50 rounded-lg border border-gray-200">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-astro-dark">Foxtrot-6</h3>
            <span class="w-3 h-3 bg-green-500 rounded-full"></span>
          </div>
          <div class="space-y-2 text-sm text-astro-gray">
            <p><span class="font-medium">Status:</span> Online</p>
            <p><span class="font-medium">Orbit:</span> 350km altitude</p>
            <p><span class="font-medium">Signal:</span> Moderate</p>
            <p><span class="font-medium">Battery:</span> 78%</p>
          </div>
        </div>
      </div>

      <!-- Satellite Statistics -->
      <div class="mt-8 grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="p-4 bg-green-50 border border-green-200 rounded-lg text-center">
          <p class="text-2xl font-bold text-green-600">4</p>
          <p class="text-sm text-green-700">Online</p>
        </div>
        <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg text-center">
          <p class="text-2xl font-bold text-yellow-600">1</p>
          <p class="text-sm text-yellow-700">Maintenance</p>
        </div>
        <div class="p-4 bg-red-50 border border-red-200 rounded-lg text-center">
          <p class="text-2xl font-bold text-red-600">1</p>
          <p class="text-sm text-red-700">Offline</p>
        </div>
        <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg text-center">
          <p class="text-2xl font-bold text-blue-600">6</p>
          <p class="text-sm text-blue-700">Total</p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>