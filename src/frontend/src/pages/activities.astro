---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Mission Planner - Activities" activePage="activities">
  <div class="space-y-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <h1 class="text-3xl font-bold text-astro-dark mb-4">Mission Activities</h1>
      <p class="text-astro-gray mb-6">
        Plan, schedule, and monitor all mission activities and operations.
      </p>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Scheduled Activities -->
        <div class="lg:col-span-2">
          <h2 class="text-xl font-semibold text-astro-dark mb-4">Scheduled Activities</h2>
          <div class="space-y-4">
            <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-semibold text-blue-900">Satellite Deployment</h3>
                <span class="text-sm bg-blue-100 text-blue-800 px-2 py-1 rounded">High Priority</span>
              </div>
              <p class="text-blue-700 text-sm mb-2">Deploy primary communication satellite</p>
              <p class="text-xs text-blue-600">Scheduled: March 20, 2024 - 14:30 UTC</p>
            </div>

            <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-semibold text-green-900">Data Collection</h3>
                <span class="text-sm bg-green-100 text-green-800 px-2 py-1 rounded">Medium Priority</span>
              </div>
              <p class="text-green-700 text-sm mb-2">Collect atmospheric data samples</p>
              <p class="text-xs text-green-600">Scheduled: March 22, 2024 - 09:15 UTC</p>
            </div>

            <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-semibold text-yellow-900">System Maintenance</h3>
                <span class="text-sm bg-yellow-100 text-yellow-800 px-2 py-1 rounded">Low Priority</span>
              </div>
              <p class="text-yellow-700 text-sm mb-2">Routine system health checks</p>
              <p class="text-xs text-yellow-600">Scheduled: March 25, 2024 - 16:00 UTC</p>
            </div>
          </div>
        </div>

        <!-- Activity Summary -->
        <div>
          <h2 class="text-xl font-semibold text-astro-dark mb-4">Activity Summary</h2>
          <div class="space-y-4">
            <div class="p-4 bg-gray-50 rounded-lg">
              <h3 class="text-sm font-medium text-astro-gray">Total Activities</h3>
              <p class="text-2xl font-bold text-astro-dark">24</p>
            </div>
            <div class="p-4 bg-gray-50 rounded-lg">
              <h3 class="text-sm font-medium text-astro-gray">Completed</h3>
              <p class="text-2xl font-bold text-green-600">18</p>
            </div>
            <div class="p-4 bg-gray-50 rounded-lg">
              <h3 class="text-sm font-medium text-astro-gray">In Progress</h3>
              <p class="text-2xl font-bold text-blue-600">3</p>
            </div>
            <div class="p-4 bg-gray-50 rounded-lg">
              <h3 class="text-sm font-medium text-astro-gray">Pending</h3>
              <p class="text-2xl font-bold text-yellow-600">3</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>